# Backend Environment Variables
# Copy this file to .env and adjust as needed

# Server Configuration
CONTEXTPILOT_HOST=0.0.0.0
CONTEXTPILOT_PORT=8000

# CORS Configuration
# For multiple origins, use JSON array format: ["http://localhost:3000", "https://example.com"]
CONTEXTPILOT_CORS_ORIGINS=["http://localhost:3000"]

# Model Configuration
CONTEXTPILOT_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Logging
CONTEXTPILOT_LOG_LEVEL=INFO

# API Limits (security)
CONTEXTPILOT_MAX_CONTENT_LENGTH=10000
CONTEXTPILOT_MAX_CONTEXTS_PER_REQUEST=20
CONTEXTPILOT_MAX_TAG_COUNT=20
CONTEXTPILOT_MAX_TAG_LENGTH=50

# Security (optional)
# Set ENABLE_AUTH=true to require API key authentication
CONTEXTPILOT_ENABLE_AUTH=false
CONTEXTPILOT_API_KEY=your-secure-api-key-here

# Storage Configuration
CONTEXTPILOT_USE_DATABASE=true

# Database Configuration
# For SQLite (default):
CONTEXTPILOT_DATABASE_URL=sqlite:///./contextpilot.db
# For PostgreSQL with pgvector:
# CONTEXTPILOT_DATABASE_URL=postgresql://user:password@localhost/contextpilot
CONTEXTPILOT_DATABASE_ECHO=false

# AI Integration
# OpenAI Configuration
CONTEXTPILOT_OPENAI_API_KEY=sk-your-openai-api-key
CONTEXTPILOT_DEFAULT_AI_PROVIDER=openai
CONTEXTPILOT_DEFAULT_AI_MODEL=gpt-4-turbo-preview

# Anthropic Configuration (alternative)
# CONTEXTPILOT_ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
# CONTEXTPILOT_DEFAULT_AI_PROVIDER=anthropic
# CONTEXTPILOT_DEFAULT_AI_MODEL=claude-3-opus-20240229

# AI Parameters
CONTEXTPILOT_AI_MAX_TOKENS=2000
CONTEXTPILOT_AI_TEMPERATURE=0.7
